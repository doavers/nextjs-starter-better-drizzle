{
  "name": "nextjs-starter-better-drizzle",
  "description": "A Next.js starter template with Better Auth and Drizzle ORM integration for building secure and scalable web applications.",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Ian Doavers",
    "email": "doavers@gmail.com",
    "url": "https://github.com/doavers"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doavers/nextjs-starter-better-drizzle"
  },
  "homepage": "https://github.com/doavers/nextjs-starter-better-drizzle",
  "bugs": {
    "url": "https://github.com/doavers/nextjs-starter-better-drizzle/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint '*/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prettier": "prettier --write */**/*.{js,jsx,json,ts,tsx,scss,css,md}",
    "prepare": "if [ \"$CI\" != \"true\" ]; then husky install; fi",
    "generate:presets": "ts-node --esm src/scripts/generate-theme-presets.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
